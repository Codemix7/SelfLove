<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item>
        <layer-list>
            <item android:left="0dp" android:top="5dp" android:right="5dp">
                <shape>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:left="0dp" android:bottom="0dp">
                <shape>
                    <gradient android:startColor="#1bffffff" android:endColor="#1bffffff" android:angle="270"/>
                    <stroke android:width="1dp" android:color="#c0baba"/>
                    <corners android:radius="5dp"/>
                    <solid android:color="#17ffffff"/>
                    <padding android:top="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
